programa {
  funcao inicio() 
  {
    real a, b, soma, a2, b2, resultado

    escreva("digite o valor a: ")
    leia(a)

    escreva("digite o valor b: ")
    leia(b)

    a2 = (a * a)

    b2 = (b * b)

    soma = (a2 + b2)

    escreva("quadrado do a é: ", (a2), ": a ao quadradon\n")
    escreva("quadrado do b é: ", (b2), ": b ao quadrado\n")
    escreva("resultado e: ", (soma), ": resultado\n")
  }
}
